<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="102dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:text="Results:"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvStudentName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFinal" />

    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="16dp"
        android:text="Student Name:"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvStudentName"
        app:layout_constraintEnd_toStartOf="@+id/tvStudentName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvStudentName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="15dp"
        android:text="SN"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvSemGrade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvResult" />

    <TextView
        android:id="@+id/tvRemark"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="34dp"
        android:text="Remark"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCompute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvRemarkLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvEquiv" />

    <TextView
        android:id="@+id/tvSemGrade"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="14dp"
        android:text="SG"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvEquiv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSemGradeLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvStudentName" />

    <TextView
        android:id="@+id/tvEquiv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="12dp"
        android:text="PE"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvRemark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvEquivLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvSemGrade" />

    <TextView
        android:id="@+id/tvSemGradeLabel"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="16dp"
        android:text="Semestral Grade:"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvSemGrade"
        app:layout_constraintEnd_toStartOf="@+id/tvSemGrade"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvEquivLabel"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="16dp"
        android:text="Pt. Equivalent:"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvEquiv"
        app:layout_constraintEnd_toStartOf="@+id/tvEquiv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRemarkLabel"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="16dp"
        android:text="Remarks:"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvRemark"
        app:layout_constraintEnd_toStartOf="@+id/tvRemark"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etMidterm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Midterm"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/etFinal"
        app:layout_constraintStart_toStartOf="@+id/etPrelim"
        app:layout_constraintTop_toBottomOf="@+id/etPrelim" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:hint="Enter Student Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tvGrades"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGrades"
        android:layout_width="102dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:text="Enter Grades:"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/etPrelim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etName" />

    <EditText
        android:id="@+id/etPrelim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Prelim"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/etMidterm"
        app:layout_constraintEnd_toEndOf="@+id/tvGrades"
        app:layout_constraintTop_toBottomOf="@+id/tvGrades" />

    <EditText
        android:id="@+id/etFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Final"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tvResult"
        app:layout_constraintStart_toStartOf="@+id/etMidterm"
        app:layout_constraintTop_toBottomOf="@+id/etMidterm" />

    <Button
        android:id="@+id/btnNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="New Entry"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCompute"
        app:layout_constraintEnd_toStartOf="@+id/btnCompute"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCompute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="148dp"
        android:text="Compute"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNew"
        app:layout_constraintTop_toBottomOf="@+id/tvRemark" />
</androidx.constraintlayout.widget.ConstraintLayout>